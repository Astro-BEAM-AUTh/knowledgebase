{
  "openapi": "3.1.0",
  "info": {
    "title": "Astro BEAM Backend API",
    "description": "Backend API for the Astro BEAM project",
    "version": "0.1.0"
  },
  "paths": {
    "/v1/telescope/observations": {
      "post": {
        "tags": ["Telescope"],
        "summary": "Submit Observation",
        "description": "Submit a new telescope observation request.",
        "operationId": "submit_observation_v1_telescope_observations_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Body_submit_observation_v1_telescope_observations_post"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ObservationRead"
                }
              }
            }
          },
          "202": {
            "description": "Observation request accepted"
          },
          "400": {
            "description": "Bad Request"
          },
          "503": {
            "description": "Telescope service unavailable"
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/telescope/observations/{observation_id}": {
      "delete": {
        "tags": ["Telescope"],
        "summary": "Cancel Observation",
        "description": "Cancel a pending telescope observation request.",
        "operationId": "cancel_observation_v1_telescope_observations__observation_id__delete",
        "parameters": [
          {
            "name": "observation_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Observation Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "204": {
            "description": "Observation cancelled successfully"
          },
          "404": {
            "description": "Observation not found"
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/v1/web/health": {
      "get": {
        "tags": ["Web"],
        "summary": "Health Check",
        "description": "Health check endpoint for the API.",
        "operationId": "health_check_v1_web_health_get",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/web/status": {
      "get": {
        "tags": ["Web"],
        "summary": "Get System Status",
        "description": "Get overall system status including telescope and observation queue info.",
        "operationId": "get_system_status_v1_web_status_get",
        "responses": {
          "200": {
            "description": "System status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Root",
        "description": "Root endpoint providing basic API information.",
        "operationId": "root__get",
        "responses": {
          "200": {
            "description": "API information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse",
                  "examples": [
                    {
                      "status": "success",
                      "message": "Welcome to Astro BEAM Backend API",
                      "data": {
                        "version": "1.0.0",
                        "docs_url": "/docs",
                        "redoc_url": "/redoc"
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
